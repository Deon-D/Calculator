<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:rowCount="6" android:columnCount="4"
    >

    <TextView
        android:id="@+id/show"
        android:gravity="left"
        android:layout_columnSpan="4"
        android:textSize="50sp"
        android:text="0"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_gravity="right"/>

    <Button
        android:id="@+id/b1"
        android:text="1"/>
    <Button
        android:id="@+id/b2"
        android:text="2"/>
    <Button
        android:id="@+id/b3"
        android:text="3"/>
    <Button
        android:id="@+id/add"
        android:text="+"/>
    <Button
        android:id="@+id/b4"
        android:text="4"/>
    <Button
        android:id="@+id/b5"
        android:text="5"/>
    <Button
        android:id="@+id/b6"
        android:text="6"/>
    <Button
        android:id="@+id/minus"
        android:text="-"/>
    <Button
        android:id="@+id/b7"
        android:text="7"/>
    <Button
        android:id="@+id/b8"
        android:text="8"/>
    <Button
        android:id="@+id/b9"
        android:text="9"/>
    <Button
        android:id="@+id/Multiply"
        android:text="*"/>
    <Button
        android:id="@+id/dot"
        android:text="."/>
    <Button
        android:id="@+id/b0"
        android:text="0"/>
    <Button
        android:id="@+id/equal"
        android:text="="/>
    <Button
        android:id="@+id/division"
        android:text="/"/>
    <Button
        android:id="@+id/AC"
        android:text="AC"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"/>
    <Button
        android:id="@+id/CE"
        android:text="delete"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"/>





</GridLayout>